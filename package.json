{
  "name": "@public-assembly/npm-package-boilerplate",
  "version": "0.0.0",
  "description": "build a react package now",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run prepack",
    "prettier": "prettier src --write",
    "lint": "eslint src",
    "prepack": "yarn clean && yarn run prettier && yarn run tsc",
    "clean": "rm -rf ./dist",
    "example": "npx parcel example/index.html",
    "app": "cd app && yarn dev",
    "publish": "yarn clean && yarn run prettier && yarn run tsc && npm publish --access public"
  },
  "author": "Public Assembly",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.15",
    "eslint": "^8.6.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.5",
    "parcel": "^2.7.0",
    "prettier": "^2.5.1",
    "process": "^0.11.10",
    "react-dom": "^18.2.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --cache --fix",
      "yarn lint"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn prettier --write ."
    ]
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
