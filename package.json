{
  "name": "root",
  "private": true,
  "author": "Public Assembly",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "preconstruct build",
    "release": "yarn build && npm publish",
    "prettier": "prettier src --write",
    "lint": "eslint src",
    "postinstall": "preconstruct dev",
    "dev": "cd example/nextjs && yarn dev",
    "watch": "preconstruct watch"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@preconstruct/cli": "^2.2.1",
    "eslint": "7.32.0",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --cache --fix",
      "yarn lint"
    ],
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn prettier --write ."
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
